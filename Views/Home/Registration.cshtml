@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutUserPanel.cshtml";
}

<center style="background-color:blanchedalmond">
    <br />
    <br />
    <br />
    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <table style="width: 500px; height: 440px; background-color:darkcyan; font-size: large; font-weight: bold; align-content:center">
            <th colspan="2" style="text-align:center"><h1>Register Now</h1></th>

            <tr>
                <td align="center">Full Name</td>
                <td align="center">
                    @Html.TextBox("name", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td align="center">Username</td>
                <td align="center">
                    @Html.TextBox("userName", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td align="center">Phone</td>
                <td align="center">
                    @Html.TextBox("phone", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td align="center">Password</td>
                <td align="center">
                    @Html.Password("password", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td align="center">Confirm Password</td>
                <td align="center">
                    @Html.Password("confirmPassword", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td align="center">Address</td>
                <td align="center">
                    @Html.TextBox("address", null, new
                    {
                        @class = "form-control",
                        style = "width: 200px;",
                        required = "required" // Added required attribute
                    })
                </td>
            </tr>

            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit" name="submit" class="btn btn-success btnOrder" />
                </td>
            </tr>
        </table>
    }

    <br /><br /><br /><br /><br /><br />
</center>
